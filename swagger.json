            "format": "email",
            "example": "Godrik"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email",
            "example": "godrik999@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "User's id"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        },
        "example": [
          {
            "email": "godrik999@gmail.com",
            "id": "8976asdf897asd02798hc73jnh"
